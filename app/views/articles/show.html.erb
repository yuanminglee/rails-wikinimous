<div class="row justify-content-center align-items-center">
  <div class="card border-light m-3 col-8">
    <h1>
      <%= @article.title %>
      <small><%= link_to icon('fas', 'edit'), edit_article_path(@article) %></small>
      <small><%= link_to icon('fas', 'trash'), article_path(@article), method: "delete", data: { confirm: "Destroy #{@article.title}?" } %></small>
    </h1>
    <p><%= @article.content %></p>
    <%= link_to "Back to articles", articles_path %>
  </div>
</div>
